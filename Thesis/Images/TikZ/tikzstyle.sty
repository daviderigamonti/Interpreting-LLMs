\ProvidesPackage{tikzstyle}

\RequirePackage{tikz}
\RequirePackage{xcolor}

\tikzset{
    background/.style n args={
        1
    }{
        show background rectangle,
        tight background,
        background rectangle/.style={
            fill=#1
        }
    }
}

\tikzset{
    semifill/.style 2 args={
        fill=#1,
        path picture={
            \fill[#2, sharp corners]  
                (path picture bounding box.south west) -| 
                (path picture bounding box.north east) -- 
                cycle;
        }
    }
}

\tikzset{
    block/.style={
        draw=gray!80,
        very thick, rounded corners,
        minimum width=15ex, minimum height=5ex,
        align=center
    },
    splitblock/.style={
        block,
        rectangle split, rectangle split horizontal, rectangle split parts=6
    },
    arrow/.style={
        draw=gray!80, -stealth, thick, rounded corners
    },
    trap/.style={
        draw=gray!80,
        trapezium,
        very thick,
        minimum width=15ex, minimum height=5ex,
        align=center
    },
    circ/.style={
        draw=gray!80, fill=bgcolor!95, 
        circle,
        ultra thick,
        minimum width=6ex, minimum height=6ex,
        align=center,
        text width=4ex
    }
}